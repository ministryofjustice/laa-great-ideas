<h1 class="govuk-heading-l">Home</h1>
<div class="govuk-tabs" data-module="tabs">
  <ul class="govuk-tabs__list">
    <li class="govuk-tabs__list-item">
      <a class="govuk-tabs__tab govuk-tabs__tab--selected" href="#my-ideas">
        My Ideas
      </a>
    </li>
    <li class="govuk-tabs__list-item">
      <a class="govuk-tabs__tab" href="#awaiting-approval">
        Awaiting Approval
      </a>
    </li>
    <% if current_user&.admin? %>
      <li class="govuk-tabs__list-item">
        <a class="govuk-tabs__tab" href="#review-date">
          Review Date
        </a>
      </li>
    <% end %>  
    <li class="govuk-tabs__list-item">
      <a class="govuk-tabs__tab" href="#uncompleted-ideas">
        All Uncompleted Ideas
      </a>
    </li>
    <% if current_user&.admin? %>
    <li class="govuk-tabs__list-item">
      <a class="govuk-tabs__tab" href="#allocated-ideas">
        My Allocated Ideas
      </a>
    </li>
    <% end %>
  </ul>
  <section class="govuk-tabs__panel" id="my-ideas">
    <h2 class="govuk-heading-l">My Ideas</h2>
    <%= render 'my_ideas_table' %>
  </section>
  <section class="govuk-tabs__panel govuk-tabs__panel--hidden" id="awaiting-approval">
    <h2 class="govuk-heading-l">Awaiting Approval</h2>
    <%= render 'awaiting_approval_table' %>
  </section>
  <section class="govuk-tabs__panel govuk-tabs__panel--hidden" id="review-date">
    <h2 class="govuk-heading-l">Review Date</h2>
    <%= render 'review_date_and_uncompleted_ideas_table' %>
  </section>
  <section class="govuk-tabs__panel govuk-tabs__panel--hidden" id="uncompleted-ideas">
    <h2 class="govuk-heading-l">All Uncompleted Ideas</h2>
    <%= render 'review_date_and_uncompleted_ideas_table' %>
  </section>
  <section class="govuk-tabs__panel govuk-tabs__panel--hidden" id="allocated-ideas">
    <h2 class="govuk-heading-l">My Allocated Ideas</h2>
    <%= render 'allocated_ideas_table' %>
  </section>
</div>
