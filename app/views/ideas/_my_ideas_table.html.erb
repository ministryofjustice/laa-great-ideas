<table class="govuk-table">
  <thead class="govuk-table__head">
    <tr class="govuk-table__row">
      <th class="govuk-table__header" scope="col">Idea ID</th>
      <th class="govuk-table__header" scope="col">Title</th>
      <th class="govuk-table__header" scope="col">Status</th>
      <th class="govuk-table__header" scope="col">Last Updated</th>
    </tr>
  </thead>
  <tbody class="govuk-table__body">
    <% @ideas.each do |idea| %>
      <tr>
        <td class="govuk-table__cell"><%= link_to idea.id, idea %></td>
        <td class="govuk-table__cell"><%= idea.title %></td>
        <td class="govuk-table__cell"><%= t(idea.status) %></td>
        <td class="govuk-table__cell"><%= idea.updated_at.strftime("%e %B %Y") %></td>
      </tr>
    <% end %>
  </tbody>
</table>
