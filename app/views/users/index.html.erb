<% title "Users - " %>

<h1 class="govuk-heading-l">Users</h1>
<table class="govuk-table">
  <thead class="govuk-table__head">
    <tr class="govuk-table__row">
    <th class="govuk-table__header" scope="col">Email</th>
    <th class="govuk-table__header" scope="col">Created</th>
    <th class="govuk-table__header" scope="col">Last updated</th>
    <th class="govuk-table__header" scope="col">Admin</th>
    <th colspan="3"></th>
    </tr>
  </thead>
  <tbody class="govuk-table__body">
    <% @users.each do |user| %>
      <tr class="govuk-table__row">
        <td class="govuk-table__cell"><%= link_to user.email, user %></td>
        <td class="govuk-table__cell"><%= user.created_at&.strftime("%e %B %Y") %></td>
        <td class="govuk-table__cell"><%= user.updated_at&.strftime("%e %B %Y") %></td>
        <td class="govuk-table__cell"><%= user.admin %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'Back', ideas_path %>
