<table>
  <thead>
    <tr>
      <th>Comment</th>
      <th>Author</th>
      <th>Idea</th>
      <th>Status at time of comment</th>
      <th>Created at</th>
     <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% comments.each do |comment| %>
      <tr>
        <td><%= comment.body %></td>
        <td><%= comment.user_id %></td>
        <td><%= comment.idea_id %></td>
        <td><%= comment.status_at_comment_time %></td>
        <td><%= comment.created_at %></td>
        <td><%= link_to 'Show', idea_comment_path(comment.idea, comment) %></td>
        <td><%= link_to 'Edit', edit_idea_comment_path(comment.idea, comment) %></td>
        <td><%= link_to 'Destroy', idea_comment_path(comment.idea, comment), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
