
<% title "Sign Up - " %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <h1 class="govuk-heading-xl">Sign up to Great Ideas</h1>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>
        <div class="govuk-form-group">
          <%=f.label :email, class: "govuk-label"%> 
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "govuk-input govuk-!-width-two-thirds form-control" %>
        </div>
        <div class="govuk-form-group">
          <%= f.label :password, class: "govuk-label" %>
          <% if @minimum_password_length %>
            <span class="govuk-hint">
              (<%= @minimum_password_length %> characters minimum)
            </span>
          <% end %>
          <%= f.password_field :password, autocomplete: "new-password",  class: "govuk-input govuk-!-width-two-thirds form-control"%>
        </div> 
        <div class="govuk-form-group">
          <%= f.label :password_confirmation, class: "govuk-label" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "govuk-input govuk-!-width-two-thirds form-control"  %>
        </div>
        <%= f.submit "Sign up", class: "govuk-button" %>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
