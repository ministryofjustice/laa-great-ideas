<% title "Sign In - " %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <h1 class="govuk-heading-xl">Sign in to Great Ideas</h1>
    <%= devise_error_messages! %>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="govuk-form-group">
        <%= f.label :email, class: "govuk-label" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "govuk-input govuk-!-width-two-thirds form-control" %>
      </div>
      <div class="govuk-form-group">
        <%= f.label :password, class: "govuk-label" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "govuk-input govuk-!-width-two-thirds form-control" %>
      </div>
      <div class="govuk-form-group"> 
        <div class="govuk-checkboxes">
          <div class="govuk-checkboxes__item">
            <% if devise_mapping.rememberable? %>
              <%= f.check_box :remember_me, class: "govuk-checkboxes__input" %>
              <%= f.label :remember_me, class:"govuk-label govuk-checkboxes__label" %>
            <% end -%>
          </div>
        </div>
      </div>
      <%= f.submit "Log in", class: "govuk-button" %>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>
